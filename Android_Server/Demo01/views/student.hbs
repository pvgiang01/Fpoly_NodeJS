<script>

     const onchangeImg = () => {
        var file = document.getElementById('avatar').files[0];
        var reader = new FileReader();
        reader.onload = (e) => {
            document.getElementById('student-avatar').src= e.target.result
        }
        reader.readAsDataURL(file)        
    }   

</script>