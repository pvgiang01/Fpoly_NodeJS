<div class="content-wrapper">
    <div class="container">
        <div class="row pad-botm">
            <div class="col-md-12">
                <h4 class="header-line">FORM EXAMPLES</h4>
            </div>
        </div>
        <div class="row" style="display: flex;">
            <div class="col-md-8 col-sm-8 col-xs-12" style="margin: auto;">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        BASIC FORM
                    </div>
                    <div class="panel-body">
                        <form enctype="multipart/form-data" role="form" action="/student/update/{{student.id}}" method="POST">
                            <div class="form-group">
                                <label>Enter Name</label>
                                <input name="name" value="{{student.name}}" class="form-control" type="text" />
                            </div>
                            <div class="form-group">
                                <label>Enter Date</label>
                                <input name="dob" value="{{student.dob}}" class="form-control" type="date" />
                            </div>
                            <div class="form-group">
                                <label>Enter Mobile</label>
                                <input name="mobile" value="{{student.mobile}}" class="form-control" type="text" />
                            </div>
                            <div class="form-group">
                                <label>Text area</label>
                                <textarea name="address" class="form-control" rows="3">{{student.address}}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Select Example</label>
                                <select class="form-control" name="classId">
                                    {{#each clazz}}
                                        {{#if (soSanh this.id ../student.classId)}}
                                            <option selected value="{{this.id}}">{{this.name}}</option>
                                        {{else}}
                                            <option value="{{this.id}}">{{this.name}}</option>
                                        {{/if}}                                        
                                    {{/each}}                                    
                                </select>
                            </div>
                            <hr />
                            <div class="form-group">
                                 <img id="student-avatar" width="170" height="170" src="{{student.avatar}}"/>
                                 <input onchange="onchangeImg()" value="{{student.avatar}}" type="file" id="avatar" 
                                    class="form-control-file border" name="avatar" />
                            </div>                           

                            <hr />                            
                            <button type="submit" class="btn btn-info">Send Message </button>

                        </form>
                    </div>
                </div>
            </div>

        </div>
        <!--/.ROW-->

    </div>
</div>
